#!/usr/bin/env node

import { buildApp } from '../web-server/app.js'
import launchApp from '../web-server/launch-app.js'
import { title, input } from '../lib/components/index.js'

const ui = [
  title('My example app'),
  input({ type: 'text', name: 'Name' })
]

const onSubmit = ({ Name }) => {
  return 'Hello ' + Name + '!'
}

const app = buildApp({ ui, onSubmit })

launchApp(app)
